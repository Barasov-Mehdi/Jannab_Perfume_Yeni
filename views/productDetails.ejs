<!DOCTYPE html>
<html lang="az">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= product.name %> - Məhsul Detalları</title>
    <link rel="stylesheet" href="/path/to/your/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<style>
    /* Ümumi Stillər */
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 20px;
        background-color: #f4f4f4;
        color: #333;
    }

    .container {
        max-width: 800px;
        margin: auto;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    }

    /* Başlık stilleri */
    h1 {
        text-align: center;
        color: #444;
        font-size: 28px;
    }

    /* Məhsul Məlumatı */
    .product-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
        margin-bottom: 20px;
    }

    .product-image {
        max-width: 70%;
        height: auto;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 15px;
    }

    .product-details {
        text-align: center;
        margin-top: 10px;
    }

    .price {
        font-size: 1.5em;
        color: #28a745;
        margin: 5px 0;
    }

    /* Sabit Resimler Bölmesi */
    .additional-images {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
        width: 100%;
    }

    .additional-images img {
        width: 32%; /* Her resim 3 için %32 genişliğe sahip olur. */
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    /* Yıldız Derecelendirme */
    .rating {
        display: flex;
        justify-content: center;
        margin: 15px 0;
    }

    .star {
        color: #FFD700;
        font-size: 20px;
    }

    /* Kateqoriya etiketleri */
    .category-label {
        font-weight: bold;
        padding: 3px 6px;
        border-radius: 4px;
        display: inline-block;
        margin-top: 5px;
    }

    .category-label.woman {
        background-color: #FAD0D0;
        color: #E91E63;
    }

    .category-label.man {
        background-color: #D0E1FA;
        color: #2196F3;
    }

    .category-label.unisex {
        background-color: #E0E0E0;
        color: #9E9E9E;
    }

    /* Qiymət Cədvəli */
    .price-table-container {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
    }

    .price-table {
        width: 100%;
        border-collapse: collapse;
    }

    .price-table th,
    .price-table td {
        padding: 12px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .price-table th {
        background-color: #f4f4f4;
    }

    /* Qeydlər */
    .notes-section {
        margin-top: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        background-color: #f9f9f9;
    }

    .notes-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .note-item {
        text-align: center;
        margin: 5px;
        max-width: 80px;
    }

    .note-image {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
    }

    /* Geri Dön Butonu */
    .back-link {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        border-radius: 4px;
        text-decoration: none;
        text-align: center;
        transition: background-color 0.3s;
        font-weight: bold;
    }

    .back-link:hover {
        background-color: #0056b3;
    }

    /* Responsive Dizayn */
    @media (min-width: 600px) {
        .product-info {
            flex-direction: row;
            align-items: flex-start;
        }

        .product-details {
            margin-left: 15px;
            text-align: left;
        }

        .product-image {
            max-width: 50%;
        }
    }
</style>

<body>
    <div class="container">
        <h1><%= product.name %></h1>

        <!-- Məhsul Məlumatı -->
        <div class="product-info">
            <img src="<%= product.img %>" alt="<%= product.name %> şəkli" class="product-image">
            <section class="product-details">
                <p class="price"><strong>Qiymət:</strong> $<%= product.price.toString() %></p>

                <!-- Yıldız Derecelendirme -->
                <div class="rating">
                    <span class="star"><i class="fas fa-star"></i></span>
                    <span class="star"><i class="fas fa-star"></i></span>
                    <span class="star"><i class="fas fa-star"></i></span>
                    <span class="star"><i class="fas fa-star"></i></span>
                    <span class="star half"><i class="fas fa-star-half-alt"></i></span>
                </div>

                <p><strong>Təsvir:</strong> <%= product.content || 'Təsvir mövcud deyil' %></p>
                <p><strong>Kateqoriya:</strong>
                    <span class="category-label <%= product.category %>">
                        <%= product.category.charAt(0).toUpperCase() + product.category.slice(1) %>
                    </span>
                </p>
                <p><strong>Ən Çox Satılan:</strong> <%= product.bestSellers ? 'Bəli' : 'Xeyir' %></p>

                <!-- Kompozisiya Açıklaması -->
                <p><strong>Kompozisiya:</strong> <%= product.compositionDescription || 'Məlumat mövcud deyil' %></p>
            </section>
        </div>

        <!-- Sabit Resimler Bölməsi -->
        <div class="additional-images">
            <img src="/img/15ml.JPG" alt="Görüntü 1">
            <img src="/img/30ml.JPG" alt="Görüntü 2">
            <img src="/img/50ml.JPG" alt="Görüntü 3">
        </div>

        <!-- Qiymət Cədvəli -->
        <section class="price-table-container">
            <h3>Qiymət Cədvəli</h3>
            <table class="price-table" aria-label="Məhsul qiyməti həcminə görə">
                <thead>
                    <tr>
                        <th>Həcmi (ml)</th>
                        <th>Qiymət</th>
                    </tr>
                </thead>
                <tbody>
                    <% const volumePrices = [15, 30, 50]; %>
                    <% volumePrices.forEach(function(volume) {
                        const price = (product.price * (volume)).toFixed(2); // 15ml referans alarak hesapla
                    %>
                        <tr>
                            <td><%= volume %> ml</td>
                            <td><strong>$<%= price %></strong></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </section>

        <!-- Qeydlər Bölməsi -->
        <section class="notes-section">
            
            <h4>Üst Qeydlər</h4>
            <% if (product.upperNotes && product.upperNotes.notes.length) { %>
                <div class="notes-container">
                    <% product.upperNotes.notes.forEach((note, index) => { %>
                        <div class="note-item">
                            <p><strong><%= note %></strong></p>
                            <img src="<%= product.upperNotes.images[index] %>" alt="<%= note %>" class="note-image">
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p>Üst qeydlər mövcud deyil.</p>
            <% } %>

            <h4>Ürək Qeydləri</h4>
            <% if (product.heartNotes && product.heartNotes.notes.length) { %>
                <div class="notes-container">
                    <% product.heartNotes.notes.forEach((note, index) => { %>
                        <div class="note-item">
                            <p><strong><%= note %></strong></p>
                            <img src="<%= product.heartNotes.images[index] %>" alt="<%= note %>" class="note-image">
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p>Ürək qeydləri mövcud deyil.</p>
            <% } %>

            <h4>Base Qeydləri</h4>
            <% if (product.baseNotes && product.baseNotes.notes.length) { %>
                <div class="notes-container">
                    <% product.baseNotes.notes.forEach((note, index) => { %>
                        <div class="note-item">
                            <p><strong><%= note %></strong></p>
                            <img src="<%= product.baseNotes.images[index] %>" alt="<%= note %>" class="note-image">
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p>Base qeydləri mövcud deyil.</p>
            <% } %>
        </section>

        <!-- Geri Dön Butonu -->
        <a href="/" class="back-link" aria-label="Məhsul siyahısına keçid">
            <i class="fas fa-chevron-left"></i> Əsas səhifə
        </a>
    </div>
</body>
</html>